            @Html.ActionLink("Details", "Details", new { id = item.FeeCode_Id }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.FeeCode_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FeeCode_Id })
        </td>
    </tr>
}

</table>
<br />
