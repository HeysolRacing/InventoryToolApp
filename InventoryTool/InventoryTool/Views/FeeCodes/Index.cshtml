        </th>
        <th>
            BL
        </th>
        <th>
            AC
        </th>
        <th>
            Createdby
        </th>
        <th>
            Created
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fleet)
