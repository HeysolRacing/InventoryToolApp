        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Term)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lpis)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.Scontr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InsPremium)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fee)
        </td>
        <td>
